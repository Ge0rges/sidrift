# vim: filetype=python
from fastapi import FastAPI
from sidrift.track import backtrack as bktrk
from datetime import datetime

app = FastAPI()

@app.get("/")
async def read_root():
    return {"Hello": "World"}

@app.get("/backtrack/")
async def backtrack(start_date: datetime, lon_0: float, lat_0: float):
    return bktrk(start_date, lon_0, lat_0)

if __name__ == "__main__":
    import uvicorn
    uvicorn.run(app, host="0.0.0.0", port=9000)
